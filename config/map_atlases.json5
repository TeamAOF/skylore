{
	// The maximum number of Maps (Filled & Empty combined) allowed to be inside an Atlas (-1 to disable).
	"maxMapCount": 512,
	// Scale the mini-map to a given % of the height of your screen.
	"forceMiniMapScaling": 35,
	// If 'true', the Mini-Map of the Active Map will be drawn on the HUD while the Atlas is active.
	"drawMiniMapHUD": true,
	// If 'true', Atlases will be able to store Empty Maps and auto-fill them as you explore.
	"enableEmptyMapEntryAndFill": true,
	// Controls location where mini-map displays. Any of: 'HANDS', 'HOTBAR', or 'INVENTORY'.
	"activationLocation": "HOTBAR",
	// Scale the world-map to a given % of the height of your screen.
	"forceWorldMapScaling": 90,
	// Set to any of 'Upper'/'Lower' & 'Left'/'Right' to control anchor position of mini-map
	"miniMapAnchoring": "UpperLeft",
	// Enter an integer which will offset the mini-map horizontally
	"miniMapHorizontalOffset": 0,
	// Enter an integer which will offset the mini-map vertically
	"miniMapVerticalOffset": 0,
	// Controls how many usable Maps are added when you add a single Map to the Atlas
	"mapEntryValueMultiplier": 1,
	// Controls how many free Empty Maps you get for 'activating' an Inactive Atlas
	"pityActivationMapCount": 9,
	// The number of pixels to shift vertically when there's an active effect
	"activePotionVerticalOffset": 26
}